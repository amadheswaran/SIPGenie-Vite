{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "outputDirectory": "dist",
  "redirects": [
    { "source": "/sip-calculator/", "destination": "/sip-calculator", "permanent": true },
    { "source": "/compare/", "destination": "/compare", "permanent": true },
    { "source": "/blog/", "destination": "/blog", "permanent": true }
  ],
  "rewrites": [
    { "source": "/sip-calculator", "destination": "/sip-calculator.html" },
    { "source": "/compare", "destination": "/compare.html" },
    { "source": "/blog", "destination": "/blog.html" },
    { "source": "/privacy-policy", "destination": "/privacy-policy.html" },
    { "source": "/terms", "destination": "/terms.html" },
    { "source": "/disclaimer", "destination": "/disclaimer.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    },
    {
      "source": "/(.*).(css|js)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000" }]
    },
    {
      "source": "/404",
      "headers": [{ "key": "X-Robots-Tag", "value": "noindex" }]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "geolocation=(), microphone=(), camera=()" }
      ]
    }
  ]
}
